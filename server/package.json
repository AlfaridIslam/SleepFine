{
  "name": "sleepfine-backend",
  "version": "1.0.0",
  "description": "SleepFine Microservice Backend with AWS Integration",
  "type": "module",
  "main": "api-gateway/gateway.js",
  "scripts": {
    "start": "node api-gateway/gateway.js",
    "dev": "nodemon api-gateway/gateway.js",
    "start:gateway": "node api-gateway/gateway.js",
    "dev:gateway": "nodemon api-gateway/gateway.js",
    "start:sales": "node services/sales/index.js",
    "dev:sales": "nodemon services/sales/index.js",
    "start:accounts": "node services/accounts/index.js",
    "dev:accounts": "nodemon services/accounts/index.js",
    "start:logistics": "node services/logistics/index.js",
    "dev:logistics": "nodemon services/logistics/index.js",
    "start:notifications": "node services/notifications/index.js",
    "dev:notifications": "nodemon services/notifications/index.js",
    "start:admin": "node services/admin/index.js",
    "dev:admin": "nodemon services/admin/index.js",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:sales\" \"npm run start:accounts\" \"npm run start:logistics\" \"npm run start:notifications\" \"npm run start:admin\"",
    "dev:all": "concurrently \"npm run dev:gateway\" \"npm run dev:sales\" \"npm run dev:accounts\" \"npm run dev:logistics\" \"npm run dev:notifications\" \"npm run dev:admin\"",
    "dev:simple": "node start-dev.js",
    "seed": "node scripts/seed-data.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:build:all": "docker build -f api-gateway/Dockerfile -t sleepfine-api-gateway . && docker build -f services/sales/Dockerfile -t sleepfine-sales . && docker build -f services/accounts/Dockerfile -t sleepfine-accounts . && docker build -f services/logistics/Dockerfile -t sleepfine-logistics . && docker build -f services/notifications/Dockerfile -t sleepfine-notifications . && docker build -f services/admin/Dockerfile -t sleepfine-admin .",
    "sonar": "sonar-scanner"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "express",
    "aws",
    "kafka",
    "mongodb",
    "redis",
    "jenkins",
    "devsecops"
  ],
  "author": "SleepFine Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "mongoose": "^8.0.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "hpp": "^0.2.3",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "aws-sdk": "^2.1490.0",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "express-status-monitor": "^1.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "prom-client": "^13.2.0",
    "express-prometheus-middleware": "^1.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sleepfine/backend.git"
  },
  "bugs": {
    "url": "https://github.com/sleepfine/backend/issues"
  },
  "homepage": "https://github.com/sleepfine/backend#readme"
} 